#YAML -> dagitilacak tüm hizmetleri tanimlar. Bu hizmetler Dockerfile kullanır

version: "3.8"

services:
  websites:
    image: nginx
    ports:
      - "8081:80"
    restart: always
  mariadb:
    image: mariadb:latest
    container_name: mariadb
    restart: always
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
